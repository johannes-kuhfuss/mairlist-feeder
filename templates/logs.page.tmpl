{{ define "logs.page.tmpl" }}

{{ template "header" .}}

   <div class="container py-5">
        <div class="row">
            <div class="col">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                          <th scope="col" style="width: 10%">Date</th>
                          <th scope="col" style="width: 5%">Severity</th>
                          <th scope="col" style="width: 85%">Message</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{ range .logs }}
                        <tr>
                          <td>{{ .LogTime }}</td>
                          <td>{{ .LogLevel }}</td>
                          <td>{{ .LogMessage }}</td>
                        </tr>
                        {{ end }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{{ template "footer" .}}

{{ end }}
